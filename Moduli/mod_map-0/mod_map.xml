<?xml version="1.0" encoding="UTF-8"?>
<extension type="module" version="1.6" client="site" method="upgrade">
	<name>MOD_MAP</name>
	<author>Tristan Brookes</author>
	<creationDate>September 2013</creationDate>
	<copyright>Copyright (C) 2013 Code7. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later</license>
	<authorEmail>tristan@code7.co.uk</authorEmail>
	<authorURL>http://www.code7.co.uk</authorURL>
	<version>0.4</version>
	<description>MOD_MAP_DESC</description>
	
	<files>
		<filename>mod_map.xml</filename>
		<filename module="mod_map">mod_map.php</filename>
		<filename>index.html</filename>
		<filename>helper.php</filename>
		<folder>tmpl</folder>
		<folder>language</folder>
		<folder>assets</folder>
	</files>
	
	<config>
		<fields name="params">

			<fieldset name="map" label="MOD_MAP_MAP_SETTINGS">
				<field name="latitude" type="text" label="MOD_MAP_LATITUDE_LABEL" description="MOD_MAP_LATITUDE_DESC" required="true"/>
				<field name="longitude" type="text" label="MOD_MAP_LONGITUDE_LABEL" description="MOD_MAP_LONGITUDE_DESC" required="true"/>
				<field name="zoom" type="list" label="MOD_MAP_ZOOM_LABEL" description="MOD_MAP_ZOOM_DESC">
					<option value="1">1</option>
					<option value="2">2</option>
					<option value="3">3</option>
					<option value="4">4</option>
					<option value="5">5</option>
					<option value="6">6</option>
					<option value="7">7</option>
					<option value="8">8</option>
					<option value="9">9</option>
					<option value="10">10</option>
					<option value="11">11</option>
					<option value="12">12</option>
					<option value="13">13</option>
					<option value="14">14</option>
					<option value="15">15</option>
				</field>
				<field name="api" type="text" label="MOD_MAP_API_LABEL" description="MOD_MAP_API_DESC" required="true"/>
			</fieldset>

			<fieldset name="information" label="MOD_MAP_PLACE_SETTINGS">
				<field name="placeName" type="text" label="MOD_MAP_PLACENAME_LABEL" description="MOD_MAP_PLACENAME_DESC"/>			
			</fieldset>

			<fieldset name="information1" label="MOD_MAP_TITLE_ONE">
				<field name="infoTitle1" label="MOD_MAP_INFOTITLE_LABEL" description="MOD_MAP_INFOTITLE_DESC" type="text"/>
				<field name="info1" label="MOD_MAP_INFO_LABEL" description="MOD_MAP_INFO_DESC" type="text"/>
			</fieldset>

			<fieldset name="information2" label="MOD_MAP_TITLE_TWO">
				<field name="infoTitle2" label="MOD_MAP_INFOTITLE_LABEL" description="MOD_MAP_INFOTITLE_DESC" type="text"/>
				<field name="info2" label="MOD_MAP_INFO_LABEL" description="MOD_MAP_INFO_DESC" type="text"/>
			</fieldset>

			<fieldset name="information3" label="MOD_MAP_TITLE_THREE">
				<field name="infoTitle3" label="MOD_MAP_INFOTITLE_LABEL" description="MOD_MAP_INFOTITLE_DESC" type="text"/>
				<field name="info3" label="MOD_MAP_INFO_LABEL" description="MOD_MAP_INFO_DESC" type="text"/>
			</fieldset>

			<fieldset name="information4" label="MOD_MAP_TITLE_FOUR">
				<field name="infoTitle4" label="MOD_MAP_INFOTITLE_LABEL" description="MOD_MAP_INFOTITLE_DESC" type="text"/>
				<field name="info4" label="MOD_MAP_INFO_LABEL" description="MOD_MAP_INFO_DESC" type="text"/>
			</fieldset>

			<fieldset name="information5" label="MOD_MAP_TITLE_FIVE">
				<field name="infoTitle5" label="MOD_MAP_INFOTITLE_LABEL" description="MOD_MAP_INFOTITLE_DESC" type="text"/>
				<field name="info5" label="MOD_MAP_INFO_LABEL" description="MOD_MAP_INFO_DESC" type="text"/>
			</fieldset>

			<fieldset name="information6" label="MOD_MAP_TITLE_SIX">
				<field name="infoTitle6" label="MOD_MAP_INFOTITLE_LABEL" description="MOD_MAP_INFOTITLE_DESC" type="text"/>
				<field name="info6" label="MOD_MAP_INFO_LABEL" description="MOD_MAP_INFO_DESC" type="text"/>
			</fieldset>

			<fieldset name="dev" label="MOD_MAP_DEV_LABEL">
				<field name="cssOn" type="radio" label="MOD_MAP_CSS_LABEL" description="MOD_MAP_CSS_DESC" default="1">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
				<field name="ie8support" type="radio" label="MOD_MAP_IE_LABEL" description="MOD_MAP_IE_DESC" default="0">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL"
				description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
				<field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
				description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
				<field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL"
				description="COM_MODULES_FIELD_CACHING_DESC">
					<option value="1">JGLOBAL_USE_GLOBAL</option>
					<option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field name="cache_time" type="text" default="900" 
				label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
				description="COM_MODULES_FIELD_CACHE_TIME_DESC"/>
				<field name="cachemode" type="hidden" default="itemid">
					<option value="itemid"></option>
				</field>
			</fieldset>
			
		</fields>
	</config>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.mod_map.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_map.sys.ini</language>
	</languages>
</extension>
